<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@mipmap/yujian"
    android:id="@+id/layout">

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="180dp"
            android:text="Pleasantly Surprised One"
            android:textColor="#BD2323"
            android:background="@mipmap/xiankuang"
            android:button="@drawable/selector"
            android:textSize="17sp"
            android:gravity="center"
            android:alpha="0.5"
            ></RadioButton>
        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="180dp"
            android:text="Pleasantly Surprised Two"
            android:textColor="#BD2323"
            android:background="@mipmap/xiankuang"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:button="@drawable/selector"
            android:alpha="0.5"
            android:textSize="17sp"></RadioButton>
        <RadioButton
            android:id="@+id/radio_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pleasantly Surprised Three"
            android:textColor="#BD2323"
            android:background="@mipmap/xiankuang"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:alpha="0.5"
            android:button="@drawable/selector"
            android:textSize="17sp"></RadioButton>
        <RadioButton
            android:id="@+id/radio_Four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pleasantly Surprised Four"
            android:textColor="#BD2323"
            android:background="@mipmap/xiankuang"
            android:gravity="center"
            android:alpha="0.5"
            android:button="@drawable/selector"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="180dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"></RadioButton>

    </RadioGroup>

</RelativeLayout>